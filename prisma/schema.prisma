generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Filme{
  id     Int  @id @default(autoincrement())
  nome   String
  imagem String?
  data_lancamento Int?
  tempo_duracao Int?
  participantes Participante[]
  genero Genero[]

}
model Participante{
  id     Int  @id @default(autoincrement())
  nome   String
  imagem String?
  data_nascimento DateTime?
  staff       Boolean 
  ator        Boolean
  filme       Filme? @relation(fields: [filmeId], references:[id])
  filmeId     Int?
  }

model Genero{
  id  Int  @id@default(autoincrement())
  nome   String?
  filme Filme?@relation(fields:[filmeId], references:[id])
  filmeId Int?
}